<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dimenn_5"
        android:background="@color/color_whilte"
        android:layout_height="40dp">

        <com.cml.wodi.view.SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.cml.wodi.view.SearchView>
    </LinearLayout>

    <com.cml.wodi.view.GameDesktopView
        android:layout_width="match_parent"
        android:id="@+id/desktopView"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/circle_bg"
        android:layout_height="match_parent"></com.cml.wodi.view.GameDesktopView>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF0"
        android:text="title" />

</LinearLayout>
